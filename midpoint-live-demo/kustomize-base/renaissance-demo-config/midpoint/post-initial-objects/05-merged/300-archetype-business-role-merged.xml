<archetype xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3" oid="00000000-0000-0000-0000-000000000321">
  <name>Business role</name>
  <description>
        Archetype for roles that have meaning from the business perspective.
        Business roles are usually assigned directly to users, often by using
        request-and-approve processes. Business roles are usually composed of
        application roles.
    </description>
  <assignment>
    <assignmentRelation>
      <holderType>RoleType</holderType>
    </assignmentRelation>
  </assignment>
  <documentation>(ISO27001/5.15,ISO27001/5.16,ISO27001/5.18,ISO27001/5.23,ISO27001/5.34,ISO27001/5.37,ISO27001/8.2,ISO27001/8.3,ISO27001/8.4,ISO27001/8.9,ISO27001/8.18,ISO27001/8.20)</documentation>
  <archetypePolicy>
    <display>
      <label>
        <orig>Business role</orig>
        <translation>
          <key>businessRole.label</key>
        </translation>
      </label>
      <pluralLabel>
        <orig>Business roles</orig>
        <translation>
          <key>businessRole.pluralLabel</key>
        </translation>
      </pluralLabel>
      <icon>
        <cssClass>fe fe-role</cssClass>
        <color>#1e8449</color>
      </icon>
    </display>
    <objectTemplateRef oid="778dd02c-76a1-4300-87d6-2ed7ecec1cb3"/>
    <adminGuiConfiguration>
      <objectDetails>
        <type>RoleType</type>
        <!-- hidden panels -->
        <panel>
          <identifier>basic</identifier>
          <visibility>hidden</visibility>
          <default>false</default>
        </panel>
        <panel>
          <identifier>password</identifier>
          <visibility>hidden</visibility>
        </panel>
        <panel>
          <identifier>assignments</identifier>
          <visibility>hidden</visibility>
        </panel>
        <!--Visible panels configuration -->
        <!-- Panel for wizard -->
        <panel>
          <identifier>arw-basic</identifier>
          <display>
            <label>Application.panel.basic</label>
          </display>
          <displayOrder>10</displayOrder>
          <!-- just hiding default container. Default container does not have an identifier -->
          <container>
            <visibility>hidden</visibility>
            <path> </path>
          </container>
          <container>
            <identifier>arw-basic</identifier>
            <display>
              <label>Properties</label>
            </display>
            <item>
              <path>name</path>
            </item>
            <item>
              <path>displayName</path>
            </item>
            <item>
              <path>description</path>
            </item>
            <item>
              <path>riskLevel</path>
            </item>
            <item>
              <path>requestable</path>
            </item>
            <item>
              <path>jpegPhoto</path>
            </item>
            <!-- NOTE: if you miss any ServiceType attribute from default schema in this archetype, you can display it here.
                         Do not forget to include its definition also in application object template.
                         -->
          </container>
          <panelType>arw-basic</panelType>
          <default>true</default>
        </panel>
        <!-- standard (not wizard) panels for role modification -->
        <panel>
          <identifier>basic-role</identifier>
          <display>
            <label>Role.panel.basic</label>
          </display>
          <displayOrder>10</displayOrder>
          <applicableForOperation>modify</applicableForOperation>
          <container>
            <identifier>properties</identifier>
            <display>
              <label>Properties</label>
            </display>
            <item>
              <path>name</path>
            </item>
            <item>
              <path>displayName</path>
            </item>
            <item>
              <path>description</path>
            </item>
            <item>
              <path>riskLevel</path>
            </item>
            <item>
              <path>requestable</path>
            </item>
            <item>
              <path>jpegPhoto</path>
            </item>
            <!-- NOTE: if you miss any ServiceType attribute from default schema in this archetype, you can display it here.
                         Do not forget to include its definition also in application object template.
                         -->
          </container>
          <panelType>formPanel</panelType>
          <default>true</default>
        </panel>
        <panel>
          <identifier>projections</identifier>
          <display>
            <icon>
              <cssClass>fa fa-database</cssClass>
            </icon>
          </display>
          <displayOrder>20</displayOrder>
          <panelType>projections</panelType>
        </panel>
        <panel>
          <identifier>activation</identifier>
          <displayOrder>30</displayOrder>
          <applicableForOperation>modify</applicableForOperation>
        </panel>
        <panel>
          <identifier>inducements</identifier>
          <displayOrder>40</displayOrder>
        </panel>
        <panel>
          <identifier>roleMembers</identifier>
          <displayOrder>50</displayOrder>
          <applicableForOperation>modify</applicableForOperation>
          <listView>
            <searchBoxConfiguration>
              <objectTypeConfiguration>
                <visibility>hidden</visibility>
                <defaultValue>UserType</defaultValue>
                <supportedTypes>UserType</supportedTypes>
              </objectTypeConfiguration>
              <indirectConfiguration>
                <indirect>true</indirect>
              </indirectConfiguration>
            </searchBoxConfiguration>
          </listView>
        </panel>
        <panel>
          <identifier>governance</identifier>
          <display>
            <label>GovernanceCardsPanel.label</label>
            <icon>
              <cssClass>fa fa-users</cssClass>
            </icon>
          </display>
          <displayOrder>60</displayOrder>
          <applicableForOperation>modify</applicableForOperation>
          <panelType>governanceCards</panelType>
        </panel>
        <panel>
          <identifier>inducedBy</identifier>
          <display>
            <icon>
              <cssClass>fa fa-list</cssClass>
            </icon>
          </display>
          <displayOrder>70</displayOrder>
          <applicableForOperation>modify</applicableForOperation>
        </panel>
        <panel>
          <identifier>applicablePolicies</identifier>
          <displayOrder>80</displayOrder>
          <applicableForOperation>modify</applicableForOperation>
        </panel>
        <panel>
          <identifier>history</identifier>
          <displayOrder>90</displayOrder>
          <applicableForOperation>modify</applicableForOperation>
        </panel>
        <panel>
          <identifier>focusCases</identifier>
          <displayOrder>100</displayOrder>
          <applicableForOperation>modify</applicableForOperation>
        </panel>
        <panel>
          <identifier>focusTriggers</identifier>
          <displayOrder>110</displayOrder>
          <applicableForOperation>modify</applicableForOperation>
        </panel>
      </objectDetails>
    </adminGuiConfiguration>
  </archetypePolicy>
  <inducement>
    <identifier>business-role-owner-record</identifier>
    <documentation>(ISO27001/5.1,ISO27001/5.2,ISO27001/5.9,ISO27001/5.36)</documentation>
    <policyRule>
      <name>require-business-role-owner</name>
      <policyConstraints>
        <minAssignees>
          <name>business-role-owner</name>
          <multiplicity>1</multiplicity>
          <relation>owner</relation>
        </minAssignees>
      </policyConstraints>
      <markRef oid="5508aca4-2aef-47a6-ad50-892389823c91"/>
      <policyActions>
        <record>
          <description>Record the mark for use in dashboards and reports.</description>
        </record>
      </policyActions>
      <evaluationTarget>object</evaluationTarget>
    </policyRule>
  </inducement>
  <inducement>
    <identifier>approver-inducement-2</identifier>
    <documentation>Anyone who has an approver relation to any business role will automatically get (induced) Approver role.</documentation>
    <targetRef oid="00000000-0000-0000-0000-00000000000a" type="RoleType"/>
    <orderConstraint>
      <order>1</order>
      <relation>default</relation>
    </orderConstraint>
    <orderConstraint>
      <order>1</order>
      <relation>approver</relation>
    </orderConstraint>
    <focusType>UserType</focusType>
  </inducement>
</archetype>
