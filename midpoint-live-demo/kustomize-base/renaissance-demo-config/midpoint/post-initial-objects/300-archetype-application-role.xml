<archetype 
xmlns:t="http://prism.evolveum.com/xml/ns/public/types-3"
oid="00000000-0000-0000-0000-000000000328">
    <name>Application role</name>
    <description>
        Application roles are basic roles. They are related to applications.
        The application roles are integrating technical components for creation
        of user access with business description of the access.
    </description>
    <assignment>
        <identifier>holderType</identifier>
        <assignmentRelation>
            <holderType>RoleType</holderType>
        </assignmentRelation>
    </assignment>
    <archetypePolicy>
        <display>
            <label>
                <t:orig>Application role</t:orig>
                <t:norm>application role</t:norm>
                <t:translation>
                    <t:key>applicationRole.label</t:key>
                </t:translation>
            </label>
            <pluralLabel>
                <t:orig>Application roles</t:orig>
                <t:norm>application roles</t:norm>
                <t:translation>
                    <t:key>applicationRole.pluralLabel</t:key>
                </t:translation>
            </pluralLabel>
            <icon>
                <cssClass>fe fe-role</cssClass>
                <color>blue</color>
            </icon>
        </display>
    </archetypePolicy>
</archetype>
