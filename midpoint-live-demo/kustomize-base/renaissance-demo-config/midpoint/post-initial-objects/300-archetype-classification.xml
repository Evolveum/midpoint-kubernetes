        <identifier>holderType</identifier>
        <assignmentRelation>
            <holderType>PolicyType</holderType>
        </assignmentRelation>
    </assignment>
    <inducement>
        <orderConstraint>
            <order>2</order>
        </orderConstraint>
        <focusType>ServiceType</focusType>
    </inducement>
