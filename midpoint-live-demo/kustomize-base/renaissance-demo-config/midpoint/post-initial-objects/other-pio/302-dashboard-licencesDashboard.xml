<dashboard oid="43fa762c-bd0c-4cc1-b4fc-2854720fd7cc" xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">

    <name>licence-dashboard</name>
    <display>
        <label>Licences dashboard</label>
    </display>

    <widget>
        <identifier>active-licences</identifier>
        <display>
            <label>Active licences for demo licenced service. (out of 5 total licences)</label>
            <color>#00a65a</color>
            <icon>
                <cssClass>fa fa-ticket</cssClass>
            </icon>
        </display>
        <data>
            <sourceType>objectCollection</sourceType>
            <collection>
                <collectionRef oid="26789a8c-8e9c-4606-bd00-c4240a6caf68" type="ObjectCollectionType"/>
            </collection>
        </data>
        <presentation>
            <dataField>
                <fieldType>value</fieldType>
                <expression>
                    <proportional>
                        <style>value-only</style>
                    </proportional>
                </expression>
            </dataField>
            <dataField>
                <fieldType>unit</fieldType>
                <expression>
                    <value>/ 5 licences</value>
                </expression>
            </dataField>
            <variation>
                <condition>
                    <script>
                        <code>
                            proportional.value > 4
                        </code>
                    </script>
                </condition>
                <display>
                    <color>#c9c933</color>
                    <icon>
                        <cssClass>fa fa-warning</cssClass>
                    </icon>
                </display>
            </variation>
        </presentation>
    </widget>

</dashboard>
