<dashboard xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
        oid="118b5d33-93b8-4ef1-8c15-9bb9984ffa8b">
    <name>compliance-dashboard</name>
    <documentation>(ISO27001/5.36)</documentation>
    <display>
        <label>
            <orig>Compliance dashboard</orig>
            <translation>
                <key>ComplianceDashboard.title</key>
            </translation>
        </label>
    </display>

    <widget id="100">
        <identifier>active-applications</identifier>
        <description>Active applications</description>
        <documentation>(ISO27001/5.1,ISO27001/5.16,ISO27001/5.36)</documentation>
        <display>
            <label>
                <orig>Active applications</orig>
                <translation>
                    <key>ActiveApplications.label</key>
                </translation>
            </label>
            <icon>
                <cssClass>fa fa-cloud</cssClass>
            </icon>
            <color>var(--lightblue)</color>
        </display>
        <displayOrder>100</displayOrder>
        <data>
            <sourceType>objectCollection</sourceType>
            <collection>
                <collectionRef oid="c4a07805-67c5-4b25-961e-e47b75a0b5a5" type="c:ObjectCollectionType"/>
            </collection>
        </data>
        <presentation>
            <dataField>
                <fieldType>value</fieldType>
                <expression>
                    <proportional>
                        <style>value-only</style>
                    </proportional>
                </expression>
            </dataField>
        </presentation>
    </widget>

    <widget id="110">
        <identifier>orphaned-applications</identifier>
        <description>Orphaned applications: applications without owner</description>
        <documentation>(ISO27001/5.1,ISO27001/5.16,ISO27001/5.36)</documentation>
        <display>
            <label>
                <orig>Orphaned applications</orig>
                <translation>
                    <key>OrphanedApplications.label</key>
                </translation>
            </label>
            <icon>
                <cssClass>fa fa-user-xmark</cssClass>
            </icon>
            <color>var(--success)</color>
        </display>
        <displayOrder>110</displayOrder>
        <data>
            <sourceType>objectCollection</sourceType>
            <collection>
                <collectionRef oid="cc8c1397-e5c4-456c-bd98-f07b3dca97ec" type="c:ObjectCollectionType"/>
            </collection>
        </data>
        <presentation>
            <dataField>
                <fieldType>value</fieldType>
                <expression>
                    <proportional>
                        <style>value-only</style>
                    </proportional>
                </expression>
            </dataField>
            <variation>
                <condition>
                    <script>
                        <code>proportional.value &gt; 0 &amp;&amp; proportional.value &lt; 3</code>
                    </script>
                </condition>
                <display>
                    <color>var(--orange)</color>
                </display>
            </variation>
            <variation>
                <condition>
                    <script>
                        <code>proportional.value &gt;= 3</code>
                    </script>
                </condition>
                <display>
                    <color>var(--danger)</color>
                </display>
            </variation>
        </presentation>
    </widget>

    <widget id="300">
        <identifier>active-users</identifier>
        <description>Active users</description>
        <documentation>TODO</documentation>
        <display>
            <label>
                <orig>Active users</orig>
                <translation>
                    <key>ActiveUsers.label</key>
                </translation>
            </label>
            <icon>
                <cssClass>fa fa-user</cssClass>
            </icon>
            <color>var(--lightblue)</color>
        </display>
        <displayOrder>300</displayOrder>
        <data>
            <sourceType>objectCollection</sourceType>
            <collection>
                <collectionRef oid="0de46df0-f2d9-437b-84ba-8e8d291ef0e1" type="c:ObjectCollectionType"/>
            </collection>
        </data>
        <presentation>
            <dataField>
                <fieldType>value</fieldType>
                <expression>
                    <proportional>
                        <style>value-only</style>
                    </proportional>
                </expression>
            </dataField>
        </presentation>
    </widget>
</dashboard>
