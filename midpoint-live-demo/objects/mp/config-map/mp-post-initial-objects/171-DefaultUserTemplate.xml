<?xml version="1.0" encoding="UTF-8"?>
<objectTemplate xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
                xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
                oid="84769304-7776-11e2-b582-001e8c717e5b">
    <name>Default User Template</name>
    <item>
        <c:ref>subtype</c:ref>
        <valueEnumerationRef oid="5783c174-d141-11e4-bb29-001e8c717e5b" type="LookupTableType">
            <!-- Emp type -->
        </valueEnumerationRef>
    </item>
    <mapping>
        <strength>weak</strength>
        <source>
            <path>$user/givenName</path>
        </source>
        <source>
            <path>$user/familyName</path>
        </source>
        <expression>
            <script>
                <code>(givenName == null ? '' : givenName) + ' ' + (familyName == null ? '' : familyName)</code>
            </script>
        </expression>
        <target>
            <path>fullName</path>
        </target>
    </mapping>
    <mapping>
        <name>FTE role from subtype</name>
        <strength>strong</strength>
        <source>
            <path>subtype</path>
        </source>
        <expression>
            <assignmentTargetSearch>
                <targetType>RoleType</targetType>
                <oid>abf3884a-7778-11e2-abb7-001e8c717e5b</oid> <!-- Full Time Employee -->
            </assignmentTargetSearch>
        </expression>
        <target>
            <path>assignment</path>
        </target>
        <condition>
            <script>
                <code>subtype == 'FTE'</code>
            </script>
        </condition>
    </mapping>
    <mapping>
        <name>Contractor role from subtype</name>
        <strength>strong</strength>
        <source>
            <path>subtype</path>
        </source>
        <expression>
            <assignmentTargetSearch>
                <targetType>RoleType</targetType>
                <oid>8d62985c-7797-11e2-94a6-001e8c717e5b</oid> <!-- Contractor -->
            </assignmentTargetSearch>
        </expression>
        <target>
            <path>assignment</path>
        </target>
        <condition>
            <script>
                <code>subtype == 'CONTRACTOR'</code>
            </script>
        </condition>
    </mapping>
</objectTemplate>
